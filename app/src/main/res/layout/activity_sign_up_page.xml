<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="18dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:longClickable="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="e-Attendance"
        app:titleMarginStart="30dp"
        app:titleTextColor="@android:color/white" />


    <TextView
        android:id="@+id/textViewSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="e-Attendance!"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="50dp"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/nameTextSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@null"
        android:drawableLeft="@mipmap/name_icon"
        android:hint="  Name"
        android:inputType="textAutoComplete"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSign"
        tools:layout_editor_absoluteX="30dp" />


    <EditText
        android:id="@+id/registrationNumberTextSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/reg_icon"
        android:hint="  Registration Number"
        android:inputType="textAutoComplete"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTextSign"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/emailTextSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/email_icon"
        android:hint="  Email"
        android:inputType="textAutoComplete"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/registrationNumberTextSign"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/passwordTextSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/password_icon"
        android:hint="  Password"
        android:inputType="textAutoComplete"
        android:password="true"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTextSign"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/signUpButtonSign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_buttons"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="SignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordTextSign" />

    <TextView
        android:id="@+id/loginLabelSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Already have an account? Login."
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/signUpButtonSign"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>